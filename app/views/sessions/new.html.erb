<div class="text-center">
	<h1>Login</h1>
</div>

<div class="text-center mt-3">
	<%= bootstrap_form_tag url: '/sessions' do |f| %>
		<%= f.text_field :nick_or_email, label: 'Email or Nickname' %>
		<%= f.password_field :password %>
		<div class="d-flex justify-content-center col">
			<%= f.submit "Submit post", class: ' btn btn-success' %>
		</div>
	<% end %>
</div>
