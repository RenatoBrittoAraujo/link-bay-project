<div class="text-center">
	<h1>Sign Up</h1>
	<p>Remember to follow our guidelines, or just don't be offensive</p>
</div>

<div class="text-center mt-4">
	<%= bootstrap_form_for @user, url: users_path do |f| %>
		<%= f.text_field :nick, label: 'Nickname (unique for every user)' %>
		<%= f.email_field :email %>
		<%= f.password_field :password %>
		<%= f.password_field :password_confirmation %>
		<%= f.text_field :name %>
		<p></p>
		<div class="d-flex justify-content-center col">
			<%= f.submit "Create account", class: ' btn btn-success', data: { confirm: "You may not change your nickname after you've selected it, proceed?" } %>
		</div>
	<% end %>
</div>