<div class="text-center">
	<h1>Editing profile</h1>
	<p>Remember to follow our guidelines, or just don't be offensive</p>
</div>

<div class="text-center mt-4">
	<%= bootstrap_form_for @user, url: user_path(@user) do |f| %>
		<%= f.email_field :email %>
		<%= f.text_field :name %>
		<%= f.text_area :summary, label: 'Bio' %>
		<%= f.text_field :image_link, label: 'Profile picture (URL)' %>
		
		<br>
		<p>Password is required for making changes to your profile</p>
		<%= f.password_field :password %>
		<br>

		<div class="d-flex justify-content-center col">
			<%= f.submit "Change profile", class: ' btn btn-success' %>
		</div>
	<% end %>
</div>