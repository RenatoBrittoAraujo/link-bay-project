<%= bootstrap_form_for comment do |f| %>
	<%= f.text_area :text, hide_label: true %>

	<%= f.hidden_field :post_id, value: local_assigns[:post_id] %>

	<% unless local_assigns[:is_post] %>
		<%= f.hidden_field :comment_id, value: local_assigns[:comment_id] %>
	<% end %>

	<%= f.hidden_field :user_id, value: current_user.id %>
	
	<%= f.submit local_assigns[:is_post] ? "Comment" : "Send reply", class: 'btn btn-sm btn-primary'  %>

<% end %>